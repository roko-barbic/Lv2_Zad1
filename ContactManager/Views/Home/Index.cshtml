@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div id="body">
        <ul id="contacts"></ul>
    </div>
</div>
@section scripts{
    <script type="text/javascript">
        $(function () {
            $.getJSON('/api/contact', function (contactsJsonPayload) {
                $(contactsJsonPayload).each(function (i, item) {
                    $('#contacts').append('<li>' + item.Name + '</li>');
                });
            });
        });
    </script>
}
